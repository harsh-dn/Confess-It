<%- include('partials/header') %>
<div class="container mt-5">
  <div class="center-element">
    <h1 class="login-header">Register</h1>
  </div>

  <div class="row">
    <div class="col-sm-7 login-div">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" autocomplete="off">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
      <div class="alternate-login">
        <h5>Or Continue With Google</h5>
        <hr>
      </div>
    </div>

     <div class="col-sm-7 google-div">
       <button class="loginBtn loginBtn--google">
         <a class="non-hover" style="color: white;" href="auth/google">Login with Google</a>
       </button>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
